# Mai-Tai Environment Configuration
# Copy this file to .env and customize as needed

# =============================================================================
# DATABASE
# =============================================================================
POSTGRES_USER=maitai
POSTGRES_PASSWORD=maitai_dev_password
POSTGRES_DB=maitai

# =============================================================================
# BACKEND
# =============================================================================
# Application environment (development, production)
APP_ENV=development

# Debug mode (true/false)
DEBUG=true

# JWT secret key - CHANGE THIS IN PRODUCTION
SECRET_KEY=change-me-in-production-use-a-long-random-string

# Extra CORS origin (optional) - for LAN access, set to your machine's IP
# Example: http://192.168.1.100:3000
EXTRA_CORS_ORIGIN=

# =============================================================================
# FRONTEND
# =============================================================================
# Backend API URL (as seen from browser)
NEXT_PUBLIC_API_URL=http://localhost:8000

# WebSocket URL (as seen from browser)
NEXT_PUBLIC_WS_URL=ws://localhost:8000

# Backend URL for server-side calls (inside Docker network)
INTERNAL_API_URL=http://backend:8000

# =============================================================================
# OAUTH (Optional - for GitHub/Google sign-in)
# =============================================================================
# GitHub OAuth - https://github.com/settings/developers
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# Google OAuth - https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# NextAuth secret - generate with: openssl rand -base64 32
NEXTAUTH_SECRET=
NEXTAUTH_URL=http://localhost:3000

